<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:hint="Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/form_name"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:id = "@+id/form_photo1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/person"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/form_button_photo1"
                android:layout_width="56dp"
                android:layout_height = "56dp"
                android:background="@drawable/fundo_camera"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="93dp"
                android:layout_alignBottom="@+id/form_photo1"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:id = "@+id/form_photo2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/person"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/form_button_photo2"
                android:layout_width="56dp"
                android:layout_height = "56dp"
                android:background="@drawable/fundo_camera"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="93dp"
                android:layout_alignBottom="@+id/form_photo2"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:id = "@+id/form_photo3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/person"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/form_button_photo3"
                android:layout_width="56dp"
                android:layout_height = "56dp"
                android:background="@drawable/fundo_camera"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="93dp"
                android:layout_alignBottom="@+id/form_photo3"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>